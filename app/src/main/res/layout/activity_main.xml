<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundLayout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bb.jtoast.MainActivity">

    <Button
        android:id="@+id/show"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_green_dark"
        android:text="Show"
        />
    <com.ran.widget.RoundLinearLayout
        android:id="@+id/roundLayout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        roundLayout:topLeftRadius="60"
        roundLayout:topRightRadius="60"
        roundLayout:bottomLeftRadius="60"
        roundLayout:bottomRightRadius="60"
        android:background="@color/colorPrimary"
        >
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorPrimary"-->
            <!--&gt;-->

        <!--</LinearLayout>-->
    </com.ran.widget.RoundLinearLayout>
</RelativeLayout>
